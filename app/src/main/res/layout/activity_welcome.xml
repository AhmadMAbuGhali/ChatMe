<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:text="Welcome to Chat Me"
        android:textColor="@color/mainColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/term" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text='Read the privacy policy. Click "Agree and Continue" to accept the terms of service'
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/AgreeTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree and Continue"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="110dp"
        android:backgroundTint="@color/mainColor"
        />


</LinearLayout>